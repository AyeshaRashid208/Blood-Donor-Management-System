<Window x:Class="Blood_Donor_Management_System.loginscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blood_Donor_Management_System"
        mc:Ignorable="d"
        Title="loginscreen" Height="417" Width="500"   Background="#FF991205">
    
    <Border Background="#FFC92929" CornerRadius="20" Margin="20,20,20,15">
        <StackPanel  Margin="20,20,20,10">
            <Label Content="Login Here" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White" Margin="43,9,150,17" FontSize="18"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18" Margin="149,0,115,17"/>
            <Label Content="Password" Foreground="White" Margin="43,0,150,17" FontSize="18"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18" Margin="149,0,115,17"/>
            <Button Name="btnSubmit"  Content="Login" Margin="150,27,182,17" Background="#FF992117" Foreground="White" FontSize="20" BorderThickness="1,1,1,1" Height="39"/>
            


        </StackPanel>
    </Border>
</Window>
